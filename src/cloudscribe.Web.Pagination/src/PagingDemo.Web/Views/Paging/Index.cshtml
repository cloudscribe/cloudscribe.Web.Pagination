@using PagingDemo.Web.Models
@model IPagedList<PagingDemo.Web.Models.Product>
@{
    ViewBag.Title = "Browse all products with Model";
}
<h2>@ViewBag.Title</h2>
<p>
    <a class="btn btn-xs btn-default" asp-action="IndexAjax" asp-controller="Paging"
       
       bs-modal-link="true">Ajax Modal</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product name</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
            </tr>}
    </tbody>
</table>
<div>
    <cs-pager cs-paging-pagesize="@Model.PageSize"
              cs-paging-pagenumber="@Model.PageNumber"
              cs-paging-totalitems="@Model.TotalItemCount"
              cs-pagenumber-param="page"
              asp-controller="Paging"
              asp-action="Index"></cs-pager>
</div>

@section Scripts {

    <environment names="Development">
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>

        <script src="~/jsdev/cloudscribe-modaldialog-bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>

        <script src="~/jsdev/cloudscribe-modaldialog-bootstrap.js"></script>
    </environment>


}
